
# ========= Required =========
TELEGRAM_BOT_TOKEN=123456789:REPLACE_WITH_YOUR_TOKEN
TELEGRAM_CHAT_ID=REPLACE_WITH_CHAT_ID
THEODDS_API_KEY=REPLACE_WITH_YOUR_API_KEY

# ========= Optional =========
# Comma-separated sports keys (see theoddsapi docs for available keys)
SPORTS=soccer_epl,basketball_nba,icehockey_nhl,tennis_atp_singles
# Regions: us, uk, eu, au
REGIONS=eu,uk,us,au
# Markets: h2h (moneyline / 1x2)
MARKETS=h2h
# Minimum guaranteed edge to alert (in percent)
MIN_EDGE_PCT=0.5
# Poll period seconds
POLL_SECONDS=120
# Whitelist bookmakers by lowercase name, comma-separated (optional)
# Example: pinnacle,william hill,betfair
BOOKMAKER_WHITELIST=

# HTTP timeout seconds
HTTP_TIMEOUT=20
